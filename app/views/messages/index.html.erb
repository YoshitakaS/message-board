<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<div class="form-horizontal">
  <%= form_for(@message) do |f| %>
  <div class="form-group">
    <label for="inputName" class="col-sm-1 control-label" style="text-align:left">名前:</label>
    <div class="col-sm-4">
      <%= f.text_field :name,class: "form-control", placeholder: "Name",id: "inputName" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputContent" class="col-sm-1 control-label" style="text-align:left">内容:</label>
    <div class="col-sm-4">
      <%= f.text_area :body,class: "form-control", placeholder: "Content",id: "inputContent",rows: 4%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-1">
      <%= f.submit class: "btn btn-sm btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
  
    

